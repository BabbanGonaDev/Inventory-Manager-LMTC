<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--background color-->
    <solid
        android:color="@color/text_blue"
        />

    <!--view border color and width-->
    <stroke
        android:width="1dp"
        android:color="@color/button_white"
        />

    <!--Some padding for the text inside-->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        />

    <!--Here is the corner's radius-->
    <corners
        android:radius="15dp"
        />

</shape>